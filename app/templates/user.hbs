<div class="user left-side">
  <div class="vcard">
    <span class="vcard-avatar">
      <img src="{{model.avatar_url}}" class="avatar" height="230">
    </span>
    <h1 class="vcard-names">
      <span class="vcard-fullname">{{model.name}}</span>
      <span class="vcard-username">{{model.login}}</span>
    </h1>
    <ul class="vcard-details">
      {{#if model.email}}
        <li class="vcard-detail">
          <svg aria-hidden="true" class="octicon octicon-mail" height="16" role="img" version="1.1" viewBox="0 0 14 16" width="14"><path d="M0 4v8c0 0.55 0.45 1 1 1h12c0.55 0 1-0.45 1-1V4c0-0.55-0.45-1-1-1H1c-0.55 0-1 0.45-1 1z m13 0L7 9 1 4h12zM1 5.5l4 3L1 11.5V5.5z m1 6.5l3.5-3 1.5 1.5 1.5-1.5 3.5 3H2z m11-0.5L9 8.5l4-3v6z"></path></svg>
          <span>{{model.email}}</span>
        </li>
      {{/if}}
      <li class="vcard-detail">
        <svg aria-hidden="true" class="octicon octicon-clock" height="16" role="img" version="1.1" viewBox="0 0 14 16" width="14"><path d="M8 8h3v2H7c-0.55 0-1-0.45-1-1V4h2v4z m-1-5.7c3.14 0 5.7 2.56 5.7 5.7S10.14 13.7 7 13.7 1.3 11.14 1.3 8s2.56-5.7 5.7-5.7m0-1.3C3.14 1 0 4.14 0 8s3.14 7 7 7 7-3.14 7-7S10.86 1 7 1z"></path></svg>
        <span>{{format-date model.created_at}}</span>
      </li>
    </ul>
    <p>
      {{#link-to 'user.repos' model.login}}View repositories{{/link-to}}
    </p>
  </div>
</div>

<div class="right-side">
  {{outlet}}
</div>
